{
    "files": [
      {
        "aql": {
          "items.find": {
            "type":"file",
            "created":{"$lt":"2021-09-01"},
            "@deleteme":{"$eq":"true"},
            "$or":
                 [
                     {"stat.downloads" : {"$eq":null}},
                     {"stat.downloaded" : {"$lt":"2021-09-01"}}
                 ]
          }
        },
        "sortBy": ["repo","name","size"],
        "sortOrder": "desc"
      }
    ]
}

